<% if @user.present? %>
	<h1>Welcome to <%= @user.username.capitalize %>'s page</h1>


	<div class="row">

		<div class="col-md-4 col-md-offset-4 center">
			<%= gravatar_for @user, value: 150 %>
		</div>

	</div>

	<h4 align="center"><%= @user.username %>'s articles</h4>


	<hr>

	<div align="center">
		
		<%= will_paginate @made_articles %>
		
</div>

	<% if @user.articles.any? %>
		<%= render 'articles/list', obj: @made_articles%>
	<% end %>
	<% if params[:page] %>
		<h4 align="center" class="page_number">This is page <%= params[:page] %></h4>
	<% end %>

<% else %>
	<h2 align="center">This user doesn't exist </h2>
<% end %>

<div align="center">
		<%= will_paginate @made_articles %>
</div>
