<% if @user.present? %>
	<h2><%= @user.username.capitalize %></h2><br>

	<hr>
	<% if @user.articles.any? %>
		<% @user.articles.each do |article| %>
			<h3><%= link_to article.title, article_path(article.id)%></h3><br>
			<%= article.description %>
			<hr>
		<% end %>
	<% end %>
<% else %>
	<h2 align="center">This user doesn't exist </h2>
<% end %>