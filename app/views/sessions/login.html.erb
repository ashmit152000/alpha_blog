<h1 align="center">LOGIN TO ALPHA BLOG</h1>

 <%= form_for(:session, html: {class: "form-horizontal"}, url: login_path) do |f| %>

        <div class="form-group">
            
                <%= f.label :email, class:"col-sm-2 control-label"%>
            <div class="col-sm-8">
                <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true %>
            </div>
        </div>
            
        <div class="form-group">
            
                <%= f.label :password, class:"col-sm-2 control-label" %>
                <div class="col-sm-8">
                <%= f.password_field :password, class:"form-control", placeholder:"Password", type:"password" %>
                </div>
        </div>

         

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">

               
                    <%= f.submit "Login" , class:"btn btn-primary btn-lg" %>
                
                    
                
            </div>
        </div>

        <% end %>

        <div class="col-xs-4 col-xs-offset-4">

            [ <%= link_to "Don't have an account ? Signup ", new_user_path %> ]
        </div>